{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"moduleResolution": "bundler",
		"noEmit": true,
		"sourceMap": true,
		"jsx": "react-jsx"
	},
	"include": [
		"src/**/*"
	]
}