{
  "compilerOptions": {
    "module": "nodenext",
    "target": "es2022",
    "types": [],
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist",
    "declarationMap": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*"
  ]
}